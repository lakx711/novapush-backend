# Production Environment Variables for Render Deployment
PORT=4000
NODE_ENV=production

# MongoDB Configuration (Atlas Cloud Database)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?appName=App
MONGO_DB=novapush

# JWT Configuration
JWT_SECRET=novapush_super_secret_jwt_key_2024_production_ready_secure
JWT_EXPIRES_IN=7d

# CORS Configuration (Allow Netlify frontend)
CORS_ORIGIN=https://novapush-platform.netlify.app

# Email Configuration (SendGrid API)
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=NovaPush <noreply@novapush.app>

# Twilio Configuration (Optional - for SMS features)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Web Push Configuration (Optional - for Push Notifications)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:noreply@novapush.app
